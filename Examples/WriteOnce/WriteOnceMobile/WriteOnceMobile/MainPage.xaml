<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WriteOnceMobile"
             x:Class="WriteOnceMobile.MainPage">

    <StackLayout 
        HorizontalOptions="FillAndExpand" 
        VerticalOptions="FillAndExpand"
        Orientation="Vertical"
        Spacing="15"
        >

        <!-- TODO: 04 - Place new controls here -->
        <Label
            Text="Enter a phone word:"
            VerticalTextAlignment="Center">
        </Label>
        <Entry
            x:Name="textToNumber"
            Text="1-407-WDISNEY">
        </Entry>
        <Button
            x:Name="translateButton"
            Text="Translate"
            Clicked="TranslateButton_Clicked"
            >
        </Button>
        <Button
            x:Name="callButton"
            IsEnabled="False"
            Text="Call"
            Clicked="CallButton_Clicked"
            >
        </Button>

    </StackLayout>

</ContentPage>
